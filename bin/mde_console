// get the Composer autoloader
if (file_exists($a = __DIR__.'/../../../autoload.php')) {
    require_once $a;
} elseif (file_exists($b = __DIR__.'/../vendor/autoload.php')) {
    require_once $b;
} else {
    die(PHP_EOL.'You need to run Composer on your project to use this interface!'.PHP_EOL.PHP_EOL);
}

// launch Console API
if (php_sapi_name()==='cli') { 
	@set_time_limit(0);
	\MarkdownExtended\MarkdownExtended::getInstance()
	    ->get('\MarkdownExtended\Console')
	    ->run();
} else {
    die(PHP_EOL.'This file is for command line usage only!'.PHP_EOL.PHP_EOL);
}

// Endfile
