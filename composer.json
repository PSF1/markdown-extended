{
    "name": "piwi/markdown-extended",
    "type": "library",
    "description": "A complete PHP 5.3 package of Markdown syntax parser (extended version)",
    "keywords": [ "markdown", "markdown extended", "mde" ],
    "homepage": "http://github.com/piwi/markdown-extended",
    "license": "BSD-3-Clause",
    "authors": [{
            "name": "John Gruber",
            "homepage": "http://daringfireball.net/"
        },{
            "name": "Michel Fortin",
            "homepage": "http://michelf.com/"
        },{
            "name": "Fletcher T. Penney",
            "homepage": "http://fletcherpenney.net/"
        },{
            "name": "Pierre Cassat",
            "email": "me@e-piwi.fr",
            "homepage": "http://github.com/piwi"
    }],
    "support": {
        "issues": "http://github.com/piwi/markdown-extended/issues",
        "source": "http://github.com/piwi/markdown-extended/tree/master"
    },
    "require": { "php": ">=5.3.0" },
    "require-dev": {
        "sami/sami": "dev-master",
        "symfony/finder": "~2.1",
        "phpunit/phpunit": "3.7.*",
        "phpmd/phpmd" : "1.4.*"
    },
    "replace": {
        "atelierspierrot/markdown-extended": "dev-master",
        "atelierspierrot/extended-markdown": "dev-master"
    },
    "autoload": { "psr-0": { 
        "MarkdownExtended": "src"
    } },
    "config": {
        "bin-dir": "bin"
    },
    "bin": [ "bin/markdown-extended" ],
    "extra": {
        "branch-alias": {
            "dev-master": "0.0.*-dev"
        }
    }
}
