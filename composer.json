{
    "name": "atelierspierrot/markdown-extended",
    "type": "library",
    "description": "A complete PHP 5.3 package of Markdown syntax parser (extended version)",
    "keywords": [ "markdown" ],
    "homepage": "http://github.com/atelierspierrot/markdown-extended",
    "license": "BSD-3-Clause",
    "authors": [{
            "name": "John Gruber",
            "homepage": "http://daringfireball.net/"
        },{
            "name": "Michel Fortin",
            "homepage": "http://michelf.com/"
        },{
            "name": "Fletcher T. Penney",
            "homepage": "http://fletcherpenney.net/"
        },{
            "name": "Les Ateliers Pierrot & contributors",
            "email": "contact@ateliers-pierrot.fr",
            "homepage": "http://www.ateliers-pierrot.fr/"
        },{
            "name": "Pierre Cassat",
            "email": "piero.wbmstr@gmail.com",
            "homepage": "https://github.com/PieroWbmstr"
    }],
    "support": {
        "issues": "http://github.com/atelierspierrot/markdown-extended/issues",
        "source": "http://github.com/atelierspierrot/markdown-extended/tree/master"
    },
    "require": { "php": ">=5.3.0" },
    "require-dev": {
        "sami/sami": "dev-master",
        "phpunit/phpunit": "3.7.*",
        "phpmd/phpmd" : "1.4.*"
    },
    "autoload": { "psr-0": { "MarkdownExtended": "src" } },
    "config": {
        "bin-dir": "bin"
    },
    "bin": [ "bin/markdown-extended" ],
    "extra": {
        "branch-alias": {
            "dev-master": "0.0.*-dev"
        }
    }
}
